<Window x:Class="BigData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BigData"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="ButtonReadFile" Content="Read file" HorizontalAlignment="Left" Margin="405,29,0,0" VerticalAlignment="Top" Width="75" Click="ButtonReadFile_Click"/>
        <TextBox x:Name="TextBoxSize" HorizontalAlignment="Left" Height="23" Margin="63,29,0,0" TextWrapping="Wrap" Text="2000" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ButtonGenerate" Content="Generate strings" HorizontalAlignment="Left" Margin="405,98,0,0" VerticalAlignment="Top" Width="109" Click="ButtonGenerate_Click"/>
        <TextBox x:Name="TextBoxLettersNumber" HorizontalAlignment="Left" Height="23" Margin="63,98,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxStringsNumber" HorizontalAlignment="Left" Height="23" Margin="63,152,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxDone" HorizontalAlignment="Left" Height="23" Margin="405,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ButtonSort" Content="Sort" HorizontalAlignment="Left" Margin="405,63,0,0" VerticalAlignment="Top" Width="75" Click="ButtonSort_Click"/>
        <TextBox x:Name="TextBoxThreads" HorizontalAlignment="Left" Height="23" Margin="63,225,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
